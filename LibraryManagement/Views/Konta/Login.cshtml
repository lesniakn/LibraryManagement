@model LibraryManagement.Models.Czytelnik
@{
    ViewBag.Title = "Login";
}
<h2>Zaloguj</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @if (ViewBag.Error != null)
    {
        foreach (string str in ViewBag.Error)
        {
            @Html.Label(str, new { @class = "text-danger" })
            <br />
        }
    }
    <div class="form-group">
        @Html.Label("Nazwa Użytkownika", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Uzytkownik, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Uzytkownik, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Haslo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.PasswordFor(model => model.Haslo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Haslo, "", new { @class = "text-danger" })
        </div>
    </div>
    @Html.ActionLink("Zarejestruj się", "Register", "Konta")
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Zaloguj" class="btn btn-default" />
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

