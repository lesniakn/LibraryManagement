@model IEnumerable<LibraryManagement.Models.Wypozyczenia_Filmu>

@{
    ViewBag.Title = "Index";
}

<h2>Lista Wypożyczonych Filmów</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Data wypożyczenia")
        </th>
        <th>
            @Html.DisplayName("Data zwrotu")
        </th>
        <th>
            @Html.DisplayName("Wypożyczał")
        </th>
        <th>
            @Html.DisplayName("Tytuł")
        </th>
        <th>
            @Html.DisplayName("Stan")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Data_Wypozyczenia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data_Zwrotu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Czytelnik.Imie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Film.Tytul)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stan1.Opis)
            </td>
            @if (Session["UserID"] != null && Session["UserRole"] != null)
            {
                if (Int32.Parse(Session["UserRole"].ToString()) >= 1)
                {
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    </td>
                }
            }
        </tr>
    }
</table>
