@model IEnumerable<LibraryManagement.Models.Aktor>

@{
    ViewBag.Title = "Index";
}
<h2>Lista Aktorów</h2>
@if (Session["UserID"] != null && Session["UserRole"] != null)
{
    if (Int32.Parse(Session["UserRole"].ToString()) >= 1)
    {
        <p>
            @Html.ActionLink("Dodaj nowego Aktora", "Create")
        </p>
    }
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Imie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nazwisko)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayName("Imię")
            </td>
            <td>
                @Html.DisplayName("Nazwisko")
            </td>
            @if (Session["UserID"] != null && Session["UserRole"] != null)
            {
                if (Int32.Parse(Session["UserRole"].ToString()) >= 1)
                {
                    <td>
                        @Html.ActionLink("Edytuj", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Szczegóły", "Details", new { id = item.ID }) |
                        @Html.ActionLink("Usuń", "Delete", new { id = item.ID })
                    </td>
                }
                else
                    {
                    <td></td>
                    }
            }

        </tr>
    }
</table>