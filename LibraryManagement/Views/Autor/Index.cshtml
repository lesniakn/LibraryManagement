@model IEnumerable<LibraryManagement.Models.Autor>

@{
    ViewBag.Title = "Index";
}
<h2>Lista Autorów</h2>
@if (Session["UserID"] != null && Session["UserRole"] != null)
{
    if (Int32.Parse(Session["UserRole"].ToString()) >= 1)
    {
        <p>
            @Html.ActionLink("Dodaj nowego Autora", "Create")
        </p>
    }
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Imię Autora")
        </th>
        <th>
            @Html.DisplayName("Nazwisko Autora")
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Imie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwisko)
            </td>
            @if (Session["UserID"] != null && Session["UserRole"] != null)
            {
                if (Int32.Parse(Session["UserRole"].ToString()) >= 1)
                {
                    <td>
                        @Html.ActionLink("Edytuj", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Szczegóły", "Details", new { id = item.ID }) |
                        @Html.ActionLink("Usuń", "Delete", new { id = item.ID })
                    </td>
                }
            }
        </tr>
    }
</table>
